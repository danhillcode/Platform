    <table id="Tit" class='table table-bordered'>
      <thead>    
        <tr>
        <th>Class</th>
        <th>Time</th>
        <th>Hangout</th>     
        <th>Delete</th>  
        <th>Edit</th>  
          
        </tr>
      </thead>
     

     <tbody>
      <% @lectures.each do |lecture| %>
          <tr>
            <td><%= lecture.topic %></td>
            <td><%= lecture.time.getlocal unless lecture.time.nil? %></td>
            <td><%= link_to lecture.hangoutId, lecture.hangoutId %> </td>
              
            <td><%= button_to "Delete Class", :method => :destroy, :lecture_id => lecture.id %>

            <td><%= link_to 'Edit Class', edit_teacher_lecture_path(lecture.teacher_id, lecture.id) %>  
              
                           
          </tr>
      <% end %>
      
      </tbody>
    </table>


