<body>
<h1>Make a new lecture</h1>


	<h4>Create a link for your class.</h4>
     <form target="_blank" action="https://plus.google.com/hangouts/_" method = "GET">
    <!-- Add the form fields for Name, Occupation, and Weapon -->
       <input type="hidden" name="gid" value="1295"/>
       <select name = "gd">
         <option>Hangouts</option>
       </select>

      <input type="submit"/>
      </form>




<div>
<%= bootstrap_form_for [@teacher, @lecture], url:  teacher_lectures_path do |f| %>
  
   <%= f.label "Class title:"%>
  <%= f.text_field :topic %><br />

  <%= f.label "Date and Time of the class:"%>
  <%= f.datetime_local_field :time %><br />  

  <%= f.label "Your unique hangout id (Generate by clicking the link at the top of the page):"%>
  <%= f.text_field :hangoutId %><br />

  <%= f.label "How many students can attend the class:"%>
  <%= f.text_field :studentAmount %><br />

  <%= f.submit :class => 'btn btn-primary' %>


<% end %>
</div>

<br>




<%= button_to "Go back to your profile", user_session_path, :id => "button_id", :class => 'btn btn-primary'%>

</body>


